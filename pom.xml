<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.nuxeo.ecm.distribution</groupId>
    <artifactId>nuxeo-distribution</artifactId>
    <version>7.2</version>
  </parent>

  <groupId>org.nuxeo.marketplace.csv</groupId>
  <artifactId>parent</artifactId>
  <packaging>pom</packaging>
  <name>Nuxeo CSV Marketplace package</name>
  <version>1.4.1-NXP1</version>

  <properties>
    <marketplace.csv.version>1.4.1-NXP1</marketplace.csv.version>
    <nuxeo.csv.version>7.2-NXP1</nuxeo.csv.version>
    <nuxeo-core-storage-sql-extensions.version>7.2-NXPSQL1</nuxeo-core-storage-sql-extensions.version>
  </properties>

  <modules>
    <module>marketplace</module>
  </modules>

  <profiles>
    <profile>
      <id>ftest</id>
      <modules>
        <module>ftest/webdriver</module>
      </modules>
    </profile>
  </profiles>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.nuxeo.lib.core</groupId>
        <artifactId>nuxeo-core-storage-sql-extensions</artifactId>
        <version>${nuxeo-core-storage-sql-extensions.version}</version>
        <type>jar</type>
      </dependency>

      <dependency>
        <groupId>org.nuxeo.marketplace.csv</groupId>
        <artifactId>nxr</artifactId>
        <version>${marketplace.csv.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.marketplace.csv</groupId>
        <artifactId>marketplace-csv</artifactId>
        <version>${marketplace.csv.version}</version>
        <type>zip</type>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <scm>
    <connection>scm:git:git://github.com/nuxeo/marketplace-csv.git</connection>
    <developerConnection>scm:git:ssh://git@github.com:nuxeo/marketplace-csv.git</developerConnection>
    <url>https://github.com/nuxeo/marketplace-csv</url>
  </scm>

</project>
